<h1>Bookings</h1>
<p>
  <%= link_to "Generate CSV", bookings_csv_path, method: :post %> |
  <%= link_to "Generate Excel", bookings_xlsx_path, method: :post %> |
  <%= link_to "Get statistics", bookings_statistics_path %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile phone</th>
      <th>Arrival</th>
      <th>Departure</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
       <%= render 'booking', booking: booking %>
      </tr>
    <% end %>
  </tbody>
</table>

