<h1>Bookings</h1>
<p>Download:
  <%= link_to "CSV", bookings_url(format: "csv") %> |
  <%= link_to "Excel", bookings_url(format: "xlsx") %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile phone</th>
      <th>Arrival</th>
      <th>Departure</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
       <%= render 'booking', booking: booking %>
      </tr>
    <% end %>
  </tbody>
</table>

